<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="40sp"
            android:textColor="@android:color/black"
            android:gravity="center"
        />
        
    </LinearLayout>
    

    <!--שם משתמש-->
    <com.google.android.material.textfield.TextInputLayout
       android:id="@+id/registerUsernameLayout"
       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:hint="Full Name">

       <com.google.android.material.textfield.TextInputEditText
           android:id="@+id/registerUsername"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usernameMsg"/>

    <!--אימייל-->
    <com.google.android.material.textfield.TextInputLayout
       android:id="@+id/registerEmailLayout"
       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:hint="Email">

       <com.google.android.material.textfield.TextInputEditText
           android:id="@+id/registerEmail"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" 
           android:inputType="textEmailAddress"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailMsg"/>


    <!--סיסמא-->
    <com.google.android.material.textfield.TextInputLayout
       android:id="@+id/registerPasswordLayout"
       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:hint="ID">

       <com.google.android.material.textfield.TextInputEditText
           android:id="@+id/registerPassword"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" 
           android:inputType="number"/>

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordMsg"/>

    <!--טלפון-->

    <com.google.android.material.textfield.TextInputLayout
       android:id="@+id/registerPhoneLayout"
       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:hint="Phone">

       <com.google.android.material.textfield.TextInputEditText
           android:id="@+id/registerPhone"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" 
           android:inputType="phone"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phoneMsg"/>
    
   <!--כתובת-->
    <com.google.android.material.textfield.TextInputLayout
       android:id="@+id/registerAdressLayout"
       style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:hint="Adress">

       <com.google.android.material.textfield.TextInputEditText
           android:id="@+id/registerAdress"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>
    

    <!--עיר-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerCitySpinner"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cityMsg"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:id="@+id/registerSubmit"
        android:layout_gravity="center"/>

</LinearLayout>
